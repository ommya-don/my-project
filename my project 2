number=float(input("Enter the number:"))

if number%2==0:
    print(" {} is an even number".format(number))
else:
   print ("{} is an odd number ".format(number))
tasK 2 
total_sum = 0
for number in range(1, 51):
    total_sum += number

print(f"The sum of integers from 1 to 50 is :{total_sum}")
